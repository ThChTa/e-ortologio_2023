<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/b1"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/white"
        android:text="@string/argies_2023"
        android:textColor="@color/black"

        app:layout_constraintBottom_toTopOf="@+id/b14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b2"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/white"
        android:text="Βρες Ποτε γιορταζεισ"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b3"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_above="@+id/b2"
        android:layout_alignEnd="@+id/b2"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/white"
        android:text="@string/eor"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b14"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:layout_marginBottom="128dp"
        android:backgroundTint="@color/white"
        android:text="Παγκοσμιες / Διεθνεις Ημερες"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:layout_alignEnd="@+id/b3"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:srcCompat="@tools:sample/avatars" />




</androidx.constraintlayout.widget.ConstraintLayout>